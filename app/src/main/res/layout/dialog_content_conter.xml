<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/center_header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/center_title_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_center_title"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/textColor_center_title"
            android:textSize="@dimen/textSize_center_title"/>

        <TextView
            android:id="@+id/center_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom_center_msg"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/textColor_center_msg"
            android:textSize="@dimen/textSize_center_msg"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/center_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/center_content_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
